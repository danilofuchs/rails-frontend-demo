<p id="notice"><%= notice %></p>

<h1>Todos</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Pending</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @todos.each do |todo| %>
      <tr>
        <td><%= todo.title %></td>
        <td><%= todo.pending %></td>
        <td><%= link_to 'Show', todo %></td>
        <td><%= link_to 'Edit', edit_todo_path(todo) %></td>
        <td><%= link_to 'Destroy', todo, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
    </tbody>
    </table>
    
    <br>
    <%= react_component("HelloWorld", { greeting: "Hello from react-rails." }) %>
    <%= react_component("Log", { todos: @todos.to_json }) %>
    <%= react_component("HelloTypescript", { possibleStatus: ["ON", "OFF"] }) %>
    <%= react_component("Table/Table", { columns: @columns, dataSource: @dataSource }) %>
    <br>

<%= link_to 'New Todo', new_todo_path %>
