<p id="notice"><%= notice %></p>
<div id="rails-background">
  <h1>Refunds</h1>
  <%= react_component("Table/Table", { tableConfig: @tableConfig, columnsConfig: @columnsConfig, dataSource: @dataSource }) %>
  <table>
    <thead>
      <tr>
        <th>Country</th>
        <th>Order number</th>
        <th>Refund code</th>
        <th>Currency amount</th>
        <th>Currency symbol</th>
        <th>Status</th>
        <th>Customer email</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @refunds.each do |refund| %>
        <tr>
          <td><%= refund.country %></td>
          <td><%= refund.order_number %></td>
          <td><%= refund.refund_code %></td>
          <td><%= refund.currency_amount %></td>
          <td><%= refund.currency_symbol %></td>
          <td><%= refund.status %></td>
          <td><%= refund.customer_email %></td>
          <td><%= link_to 'Show', refund %></td>
          <td><%= link_to 'Edit', edit_refund_path(refund) %></td>
          <td><%= link_to 'Destroy', refund, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <br>
  <%= link_to 'New Refund', new_refund_path %>
</div>
