<p id="notice"><%= notice %></p>
<div id="rails-background">
  <h1>Payments</h1>
  <%= react_component("Table/Table", { tableConfig: @tableConfig, columnsConfig: @columnsConfig, dataSource: @dataSource }) %>
  <table>
    <thead>
      <tr>
        <th>Country</th>
        <th>Order number</th>
        <th>Currency amount</th>
        <th>Currency symbol</th>
        <th>Payment group</th>
        <th>Payment method</th>
        <th>Status</th>
        <th>Customer email</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @payments.each do |payment| %>
        <tr>
          <td><%= payment.country %></td>
          <td><%= payment.order_number %></td>
          <td><%= payment.currency_amount %></td>
          <td><%= payment.currency_symbol %></td>
          <td><%= payment.payment_group %></td>
          <td><%= payment.payment_method %></td>
          <td><%= payment.status %></td>
          <td><%= payment.customer_email %></td>
          <td><%= link_to 'Show', payment %></td>
          <td><%= link_to 'Edit', edit_payment_path(payment) %></td>
          <td><%= link_to 'Destroy', payment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <br>
  <%= link_to 'New Payment', new_payment_path %>
</div>
